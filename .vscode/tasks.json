// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build and run",
        "type": "shell",
        "command": "g++",
        "args": [
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}",
          "&&",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Compiles and runs a C++ file"
      }
    ]
  }
  